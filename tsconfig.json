{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
    ],
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "example",
    "dist",
    "docs"
  ]
}

